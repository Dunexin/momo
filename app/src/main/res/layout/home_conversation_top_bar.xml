<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/hpr"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_custom_action_bar_padding_left"
    android:layout_height="@dimen/activity_custom_action_bar_height">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/conversation_top_bar_head"
        android:src="@drawable/gco"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_header_tab_left_select"
            android:text="消息"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/conversation_top_bar_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_header_tab_right_normal"
            android:text="通话"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/conversation_top_bar_call"/>
        </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
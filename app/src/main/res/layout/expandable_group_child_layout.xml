<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-10dp"
        android:id="@+id/expandable_group_child_head_image"
        android:src="@drawable/gco"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_friend_name_textView"
            android:text="宝贝"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/expandable_group_child_call"
            android:layout_toRightOf="@+id/expandable_group_child_head_image"
            android:layout_toEndOf="@+id/expandable_group_child_head_image" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/qq_contacts_network_2g"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/expandable_group_child_call"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:id="@+id/contact_expandable_group_child_chat_abstract"
        android:ellipsize="end"
        android:text="[离线]"
        android:textColor="@color/list_text_color"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/contact_friend_name_textView"
        android:layout_alignStart="@+id/contact_friend_name_textView" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="17dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/list_text_color"
        android:id="@+id/contact_expandable_group_child_mood"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/contact_expandable_group_child_chat_abstract"
        android:layout_toEndOf="@+id/contact_expandable_group_child_chat_abstract" />
</RelativeLayout>
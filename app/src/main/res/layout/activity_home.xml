<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.xin.momo.HomeActivity">

    <include
        layout="@layout/home_top_bar"
        android:id="@+id/home_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_custom_action_bar_height"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:id="@+id/home_activity_content"
        android:layout_below="@+id/home_top_bar"
        android:layout_above="@+id/home_activity_bar"/>
    <include
        layout="@layout/home_bottom_bar"
        android:id="@+id/home_activity_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.xin.momo.fragmentTab.ConversationFragment">


    <include
        layout="@layout/home_conversation_top_bar"
        android:id="@+id/home_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:layout_alignParentTop="true"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/conversation_list_view"
        android:background="@color/white"
        android:divider="@color/dividing_line_color"
        android:listSelector="@drawable/list_view_default_selector"
        android:dividerHeight="1dp"
        android:layout_below="@+id/home_top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
